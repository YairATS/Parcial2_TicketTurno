              (n) => `
            <tr>
                <td>${n.id_nivel}</td>
                <td>${n.nombre_nivel}</td>
                <td>
                    <div class="actions">
                        <button class="btn-edit" onclick="editarNivel(${
                          n.id_nivel
                        }, '${n.nombre_nivel.replace(/'/g, "\\'")}')">
                            ‚úèÔ∏è Editar
                        </button>
                        <button class="btn-delete" onclick="confirmarEliminarNivel(${
                          n.id_nivel
                        }, '${n.nombre_nivel.replace(/'/g, "\\'")}')">
                            üóëÔ∏è Eliminar
                        </button>
                    </div>
                </td>
            </tr>
        `
            )
            .join("");
        } catch (error) {
          console.error("Error al cargar niveles:", error);
          mostrarMensaje("niveles", "Error al cargar los niveles", "error");
        }
      }


      cargarMunicipios();


      // ==================== FUNCIONES DE TABS ====================

      function cambiarTab(tab) {
        // Cambiar clase active en tabs
        document
          .querySelectorAll(".tab")
          .forEach((t) => t.classList.remove("active"));
        event.target.classList.add("active");

        // Cambiar clase active en cards
        document
          .querySelectorAll(".card")
          .forEach((c) => c.classList.remove("active"));
        document.getElementById(`card-${tab}`).classList.add("active");

        // Cargar datos seg√∫n el tab
        if (tab === "municipios") {
          cargarMunicipios();
        } else if (tab === "niveles") {
          cargarNiveles(); // Pr√≥ximamente
        } else if (tab === "asuntos") {
          cargarAsuntos(); // Pr√≥ximamente
        }
      }

      // ==================== CRUD MUNICIPIOS ====================

      async function cargarMunicipios() {
        try {
          const response = await fetch("/api/municipios");
          const municipios = await response.json();

          const tbody = document.getElementById("tabla-municipios");

          if (municipios.length === 0) {
            tbody.innerHTML =
              '<tr><td colspan="3" style="text-align: center;">No hay municipios registrados</td></tr>';
            return;
          }

          tbody.innerHTML = municipios
            .map(
              (m) => `
                    <tr>
                        <td>${m.id_municipio}</td>
                        <td>${m.nombre_municipio}</td>
                        <td>
                            <div class="actions">
                                <button class="btn-edit" onclick="editarMunicipio(${
                                  m.id_municipio
                                }, '${m.nombre_municipio.replace(
                /'/g,
                "\\'"
              )}')">
                                    ‚úèÔ∏è Editar
                                </button>
                                <button class="btn-delete" onclick="confirmarEliminarMunicipio(${
                                  m.id_municipio
                                }, '${m.nombre_municipio.replace(
                /'/g,
                "\\'"
              )}')">
                                    üóëÔ∏è Eliminar
                                </button>
                            </div>
                        </td>
                    </tr>
                `
            )
            .join("");
        } catch (error) {
          console.error("Error al cargar municipios:", error);
          mostrarMensaje(
            "municipios",
            "Error al cargar los municipios",
            "error"
          );
        }
      }

      function abrirModalNuevoMunicipio() {
        document.getElementById("modal-municipio-title").textContent =
          "Nuevo Municipio";
        document.getElementById("municipio-id").value = "";
        document.getElementById("municipio-nombre").value = "";
        document.getElementById("modal-municipio").classList.add("show");
      }

      function editarMunicipio(id, nombre) {
        document.getElementById("modal-municipio-title").textContent =
          "Editar Municipio";
        document.getElementById("municipio-id").value = id;
        document.getElementById("municipio-nombre").value = nombre;
        document.getElementById("modal-municipio").classList.add("show");
      }

      function cerrarModalMunicipio() {
        document.getElementById("modal-municipio").classList.remove("show");
      }

      // Manejar submit del formulario
      document
        .getElementById("form-municipio")
        .addEventListener("submit", async (e) => {
          e.preventDefault();
          await guardarMunicipio();
        });

      async function guardarMunicipio() {
        const id = document.getElementById("municipio-id").value;
        const nombre = document.getElementById("municipio-nombre").value.trim();

        if (!nombre) {
          alert("El nombre del municipio es requerido");
          return;
        }

        try {
          const url = id ? `/api/municipios/${id}` : "/api/municipios";
          const method = id ? "PUT" : "POST";

          const response = await fetch(url, {
            method: method,
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ nombre_municipio: nombre }),
          });

          if (response.ok) {
            mostrarMensaje(
              "municipios",
              id
                ? "Municipio actualizado correctamente"
                : "Municipio creado correctamente",
              "success"
            );
            cerrarModalMunicipio();
            cargarMunicipios();
          } else {
            const error = await response.json();
            mostrarMensaje(
              "municipios",
              error.error || "Error al guardar el municipio",
              "error"
            );
          }
        } catch (error) {
          console.error("Error:", error);
          mostrarMensaje("municipios", "Error de conexi√≥n", "error");
        }
      }

      function confirmarEliminarMunicipio(id, nombre) {
        if (
          confirm(
            `¬øEst√° seguro de eliminar el municipio "${nombre}"?\n\nEsta acci√≥n no se puede deshacer.`
          )
        ) {
          eliminarMunicipio(id);
        }
      }

      async function eliminarMunicipio(id) {
        try {
          const response = await fetch(`/api/municipios/${id}`, {
            method: "DELETE",
          });

          if (response.ok) {
            mostrarMensaje(
              "municipios",
              "Municipio eliminado correctamente",
              "success"
            );
            cargarMunicipios();
          } else {
            const error = await response.json();
            mostrarMensaje(
              "municipios",
              error.error || "Error al eliminar el municipio",
              "error"
            );
          }
        } catch (error) {
          console.error("Error:", error);
          mostrarMensaje("municipios", "Error de conexi√≥n", "error");
        }
      }

      // ==================== FIN MUNICIPIOS ====================

      // ==================== CRUD NIVELES ====================

      async function cargarNiveles() {
        try {
          const response = await fetch("/api/niveles");
          const niveles = await response.json();

          const tbody = document.getElementById("tabla-niveles");

          if (niveles.length === 0) {
            tbody.innerHTML =
              '<tr><td colspan="3" style="text-align: center;">No hay niveles registrados</td></tr>';
            return;
          }

          tbody.innerHTML = niveles
